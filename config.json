          "type": "string",
          "format": "file"
        },
        {
          "title": "Show lead in",
          "name": "show_subtitle",
          "type": "boolean",
          "ui:widget": "switch"
        },
        {
          "title": "Show title",
          "name": "show_title",
          "type": "boolean",
          "ui:widget": "switch"
        },
        {
          "title": "Show button",
          "name": "show_button",
          "type": "boolean",
          "ui:widget": "switch"
        },
        {
          "title": "Style",
          "name": "style",
          "type": "object",
          "fields": [
            {
              "type": "integer",
              "name": "margin_bottom",
              "title": "Push up content",
              "minimum": -100,
              "maximum": 0
            }
          ]
        }
      ]
    },
    {
      "title": "Team - React",
