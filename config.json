{
  "name": "template-editor",
  "version": "0.0.0",
  "block_types": [
    {
      "title": "Hero",
      "name": "TemplateEditorHero",
      "icon": "image",
      "type": "object",
      "fields": [
        {
          "title": "Lead in",
          "name": "subtitle",
          "type": "string"
        },
        {
          "title": "Rubrik",
          "name": "title",
          "type": "string"
        },
        {
          "title": "Länktext",
          "name": "link_text",
          "type": "string"
        },
        {
          "title": "Länk",
          "name": "link",
          "type": "string",
          "format": "uri"
        },
        {
          "title": "Bild",
          "name": "image",
          "type": "string",
          "format": "file"
        },
        {
          "title": "Show lead in",
          "name": "show_subtitle",
          "type": "boolean",
          "ui:widget": "switch"
        },
        {
          "title": "Show title",
          "name": "show_title",
          "type": "boolean",
          "ui:widget": "switch"
        },
        {
          "title": "Show button",
          "name": "show_button",
          "type": "boolean",
          "ui:widget": "switch"
        },
        {
          "title": "Style",
          "name": "style",
          "type": "object",
          "fields": [
            {
              "type": "integer",
              "name": "margin_bottom",
              "title": "Push up content",
              "minimum": -100,
              "maximum": 0
            }
          ]
        }
      ]
    }
  ],
  "data_defaults": {
    "blocks": {
      "TemplateEditorHero": {
        "title": "Create an account and start making your own web sites",
        "subtitle": "Edit everything on this site and if you like it...",
        "link": "#services",
        "link_text": "Tell me more",
        "image": "https://raw.githubusercontent.com/klar-templates/agency/master/img/header-bg.jpg",
        "show_title": true,
        "show_subtitle": true,
        "show_button": true,
        "style": {
          "title_text_color": "#ffffff",
          "subtitle_text_color": "#ffffff",
          "button_bg_color": "{{theme.colors.primary_color}}",
          "button_text_color": "#ffffff",
          "padding_top": 300,
          "padding_bottom": 200,
          "full_screen": true,
          "text_align": "center",
          "show_overlay": true,
          "overlay_bg_color": "#000000",
          "overlay_opacity": 40,
          "margin_top": 0,
          "bg_image_position_top": 0
        }
      }
    }
  }
}
